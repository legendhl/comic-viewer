{
  "name": "comic-viewer",
  "description": "comic viewer",
  "author": "legendhl",
  "version": "0.2.1",
  "platform": "darwin",
  "scripts": {
    "serve": "concurrently 'npm:serve-electron' 'npm:serve-ng' 'npm:open-electron' --color --prefix-colors 'gray,green,cyan'",
    "serve-electron": "rimraf ./dist/electron && tsc-watch -p ./electron/tsconfig.electron.json --noClear",
    "serve-ng": "ng serve",
    "open-electron": "wait-on http-get://localhost:4200 && electron . -t --inspect=5858 --js-flags=\"--expose-gc\"",
    "build": "npm run build-electron && npm run build-ng && npm run package-electron -- --mac",
    "replace-electron-env:prod": "mv ./dist/electron/environments/environment.prod.js ./dist/electron/environments/environment.js",
    "build-electron": "rimraf ./dist/electron && tsc -p ./electron/tsconfig.electron.json --sourceMap false && npm run replace-electron-env:prod",
    "build-ng": "node --max_old_space_size=4096 ./node_modules/@angular/cli/bin/ng build --prod",
    "package-electron": "rimraf release && electron-builder --config electron/electron-builder.json"
  },
  "main": "dist/electron/main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.3",
    "@angular/common": "~9.1.3",
    "@angular/compiler": "~9.1.3",
    "@angular/core": "~9.1.3",
    "@angular/forms": "~9.1.3",
    "@angular/platform-browser": "~9.1.3",
    "@angular/platform-browser-dynamic": "~9.1.3",
    "@angular/router": "~9.1.3",
    "electron-prompt": "^1.5.1",
    "rimraf": "^3.0.2",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^9.1.0",
    "@angular-devkit/build-angular": "~0.901.3",
    "@angular/cli": "~9.1.3",
    "@angular/compiler-cli": "~9.1.3",
    "@angular/language-service": "~9.1.3",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "concurrently": "^5.2.0",
    "electron": "9.1.0",
    "electron-builder": "^22.7.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tsc-watch": "^4.2.8",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3",
    "wait-on": "^5.0.1"
  },
  "browser": {
    "http": false,
    "https": false,
    "net": false,
    "path": false,
    "stream": false,
    "tls": false,
    "crypto": false,
    "constants": false,
    "fs": false
  }
}
